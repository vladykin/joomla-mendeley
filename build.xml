<?xml version="1.0" encoding="UTF-8"?>
<project name="joomla-mendeley" default="dist">

    <target name="dist" depends="static-checks">
        <mkdir dir="build"/>
        <zip destfile="build/joomla-mendeley.zip" basedir="src"/>
    </target>

    <target name="static-checks">
        <phplint deprecatedAsError="true" haltonfailure="true">
            <fileset dir="src">
                <include name="**/*.php"/>
            </fileset>
        </phplint>
    </target>

    <target name="clean">
        <delete dir="build"/>
    </target>

</project>
